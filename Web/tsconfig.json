{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "bin",
    "node_modules",
    "wwwroot/dist"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true,
        "enableTsDiagnostics": true
      }
    }
  }
}